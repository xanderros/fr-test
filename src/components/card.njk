<div class="card">
  <div class="card__inner">
    <div class="card__box">
      <div class="card__side card__side_front">
        <div class="card__icon">
          <img
            class="card__icon-img"
            src="img/{{ icon }}.svg"
            alt="{{ label }} icon"
            width="120"
            height="120"
            loading="lazy"
/>
        </div>
        <h3 class="card__label">{{ label }}</h3>
      </div>
      <div class="card__side card__side_back">
        <div class="card__icon">
          <img
            class="card__icon-img"
            src="img/{{ iconFlip }}.svg"
            alt="{{ labelFlip }} icon"
            width="120"
            height="120"
            loading="lazy"
/>
        </div>
        <h3 class="card__label">{{ labelFlip }}</h3>
      </div>
    </div>
  </div>
</div>